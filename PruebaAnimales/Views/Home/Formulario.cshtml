@{
    ViewData["Title"] = "Formulario";
}
<h2>Nueva Vaca</h2>
<fieldset>
    <legend> Mantenedor de Animales</legend>
    @using (@Html.BeginForm("Guardar", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {

        <div class="form-group">
            <span class="col-md-2">
                Nombre
            </span>
            <span class="col-md-6">
                @Html.TextBox("nombre", null, new { @class = "form-control", placeholder = "Ingresar Nombre" })
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Sexo
            </span>
            <span class="col-md-6">
                @Html.TextBox("sexo", null, new { @class = "form-control", placeholder = "Ingresar Sexo" })
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Raza
            </span>
            <span class="col-md-6">
                @Html.DropDownList("raza", new List<SelectListItem>
                   {
                       new SelectListItem{Text="Holstein", Value="Holstein"},
                       new SelectListItem{Text="Jersey", Value="Jersey"},
                       new SelectListItem{Text="Ayrshire", Value="Ayrshire"},
                   },
                   new { @class = "form-control" }
                   )
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Edad
            </span>
            <span class="col-md-6">
                @Html.TextBox("edad", null, new { @class = "form-control", placeholder = "Ingresar Edad" })
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Tipo
            </span>
            <span class="col-md-6">
                @Html.DropDownList("tipo", new List<SelectListItem>
                   {
                       new SelectListItem{Text="Vaca", Value="Vaca"},
                       new SelectListItem{Text="Ternera", Value="Ternera"},
                       new SelectListItem{Text="Ternero", Value="Ternero"},
                       new SelectListItem{Text="Toro", Value="Toro"},
                       new SelectListItem{Text="Buey", Value="Buey"}
                   },
                   new { @class = "form-control" }
                   )
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Rebaño
            </span>
            <span class="col-md-6">
                @Html.DropDownList("rebaño", new List<SelectListItem>
                   {
                       new SelectListItem{Text="Animales Gordos", Value="Animales Gordos"},
                       new SelectListItem{Text="Animales Enfermos", Value="Animales Enfermos"},
                       new SelectListItem{Text="Animales a Eliminar", Value="Animales a Eliminar"}
                       
                   },
                   new { @class = "form-control" }
                   )
            </span>
        </div>

        <div class="form-control">
            <button type="submit" class="btn btn-primary">Limpiar</button>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>

    }

</fieldset>